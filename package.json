{
  "name": "ro-sa",
  "version": "0.0.1",
  "license": "MIT",
  "scripts": {
    "start": "concurrently --kill-others \"yarn serve:api -q\" \"yarn serve:ui\"",
    "hmr": "ng serve --hmr --env=hmr",
    "serve:ui": "ng serve --proxy-config proxy.conf.json --aot",
    "serve:api": "json-server --watch \"api/db.json\"",
    "build": "ng build --prod",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:ci": "jest --runInBand",
    "test:coverage": "jest --coverage",
    "e2e": "testcafe chrome e2e/**/*.e2e-spec.ts",
    "e2e:dev": "testcafe-live chrome e2e/**/*.e2e-spec.ts",
    "e2e:ci": "testcafe all e2e/**/*.e2e-spec.ts --app 'yarn start' --app-init-delay 4000",
    "lint": "ng lint --format codeFrame --fix",
    "format": "prettier {src,e2e}/**/*.{ts,tsx,json,md,scss,css,less} --write",
    "style": "yarn format && yarn lint",
    "verify": "yarn style && yarn test",
    "tslint-check": "tslint-config-prettier-check ./tslint.json",
    "storybook": "start-storybook -p 9009 -s src/assets",
    "storybook:build": "build-storybook  -o .storybook-out",
    "commitmsg": "commitlint -e $GIT_PARAMS",
    "precommit": "lint-staged",
    "prepush": "yarn verify"
  },
  "lint-staged": {
    "{src,e2e}/**/*.{js,jsx,ts,tsx}": [
      "yarn lint",
      "git add"
    ],
    "{src,e2e}/**/*.{js,jsx,ts,tsx,css,scss,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "5.2.6",
    "@angular/common": "5.2.6",
    "@angular/compiler": "5.2.6",
    "@angular/core": "5.2.6",
    "@angular/forms": "5.2.6",
    "@angular/http": "5.2.6",
    "@angular/platform-browser": "5.2.6",
    "@angular/platform-browser-dynamic": "5.2.6",
    "@angular/router": "5.2.6",
    "core-js": "2.5.3",
    "json-server": "0.12.1",
    "rxjs": "5.5.6",
    "zone.js": "0.8.20"
  },
  "devDependencies": {
    "@angular/cli": "1.7.1",
    "@angular/compiler-cli": "5.2.6",
    "@angular/language-service": "5.2.6",
    "@angularclass/hmr": "2.1.3",
    "@storybook/addon-actions": "3.4.0-alpha.9",
    "@storybook/addon-knobs": "3.4.0-alpha.9",
    "@storybook/addon-links": "3.4.0-alpha.9",
    "@storybook/addon-notes": "3.4.0-alpha.9",
    "@storybook/addon-options": "3.4.0-alpha.9",
    "@storybook/addon-storyshots": "3.4.0-alpha.9",
    "@storybook/addon-storysource": "3.4.0-alpha.9",
    "@storybook/addons": "3.4.0-alpha.9",
    "@storybook/angular": "3.4.0-alpha.9",
    "@types/node": "~6.0.60",
    "@types/webpack-env": "1.13.5",
    "babel-core": "6.26.0",
    "codelyzer": "4.1.0",
    "commitlint": "6.1.0",
    "concurrently": "3.5.1",
    "husky": "0.14.3",
    "jest": "22.4.0",
    "jest-preset-angular": "5.1.0",
    "lint-staged": "7.0.0",
    "prettier": "1.10.2",
    "testcafe": "0.18.6",
    "testcafe-angular-selectors": "0.3.0",
    "testcafe-live": "0.1.3",
    "tslint": "5.9.1",
    "tslint-config-prettier": "1.8.0",
    "typescript": "2.6.2"
  }
}
